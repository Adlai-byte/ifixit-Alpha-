<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ifixit" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- Customize the color of the status bar (top bar) -->
        <item name="colorPrimaryDark">@color/colorPrimary</item>

        <!-- Customize the accent color for UI elements -->
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Customize the background color of the app -->
        <item name="android:windowBackground">@color/colorBackground</item>

        <!-- Customize the text color of the app -->
        <item name="android:textColor">@color/colorText</item>
        <item name="windowActionBar">true</item>




<!--        <item name="colorPrimary">@color/colorPrimary</item>-->
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
<!--        <item name="colorOnPrimary">@color/white</item>-->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <!-- Customize your theme here. -->
<!--        <item name="windowActionBar">true</item>-->
    </style>





    <style name="SplashScreen." parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor" >?attr/colorOnPrimary</item>

    </style>






    <style name="Theme.Ifixit.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Ifixit.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Ifixit.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



