<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SERVICE_PROVIDER_FILES.ServiceProviderRegistrationActivity">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:orientation="vertical"

        >

<TextView
    android:layout_marginTop="20sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Let's gets started"
    android:textSize="35sp"
    android:textStyle="bold"
    android:textAlignment="center"
    />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please fill in the form below"

            android:textAlignment="center"
            />




        <EditText
            android:id="@+id/SPetFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName" />



        <EditText
            android:id="@+id/SPetAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Address"
            android:inputType="textPersonName" />



        <EditText
            android:id="@+id/SPetEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Email"
            android:inputType="textPersonName" />
            <EditText
                android:id="@+id/SPetPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="12"
                android:hint="Phone"
                android:inputType="phone" />



            <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:padding="18dp"
            android:entries="@array/service_options" />


        <EditText
            android:id="@+id/SPetPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/SPetConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:ems="10"
            android:inputType="textPersonName" />




        <Button

            android:id="@+id/SPbtnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign-up" />

        <TextView
            android:id="@+id/SPtvAlreadyHaveAnAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Already have an accout? click here to Sign in" />


    </LinearLayout>
</LinearLayout>