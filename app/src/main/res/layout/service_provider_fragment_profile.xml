<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/customerInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:elevation="5dp"
        android:orientation="vertical"
        android:padding="15dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:orientation="horizontal">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/SPNewImage"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:layout_marginTop="20sp"

                android:layout_marginRight="10sp"
                android:src="@mipmap/ic_default_image" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvSPname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25sp"
                    android:text="Loading Name...."
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSPservice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:text="Loading Service"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:text="Pricing Range:"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:id="@+id/tvSPbasepricingLOW"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:text=" 0 "
                        android:textColor="@color/quantum_googgreen"
                        android:textStyle="bold"


                        />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:text="-"

                        />

                    <TextView
                        android:id="@+id/tvSPbasepricingHIGH"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:text=" 1000"
                        android:textColor="@color/quantum_googred"

                        />


                </LinearLayout>


                <TextView
                    android:id="@+id/tvSPemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:text="Loading email...."

                    />
            </LinearLayout>

            <ImageView

                android:id="@+id/settingBtn"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_margin="20dp"
                android:src="@drawable/baseline_settings_24"

                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/SPeditLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:orientation="vertical"
            android:visibility="gone"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:text="Edit Profile"
                android:textAlignment="center"
                android:textSize="20sp"

                />

            <EditText
                android:id="@+id/SPNameET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter New Name"

                />

            <EditText
                android:id="@+id/SPAddressET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"

                />

            <EditText
                android:id="@+id/SPPhoneET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Phone"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ETpriceLOW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Minimum Pricing"
                    android:inputType="number"

                    />

                <EditText
                    android:id="@+id/ETpriceHIGH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:hint="Maximum Pricing"
                    android:inputType="number" />


            </LinearLayout>


            <Spinner
                android:id="@+id/adminspinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/service_options" />

            <Button
                android:id="@+id/SPUploadBtnNew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Image" />

            <Button
                android:id="@+id/SPsaveBtnNew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/requestBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:text="Request" />

            <Button
                android:id="@+id/reviewsBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="60dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:text="Reviews" />


        </LinearLayout>


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/requestsRecyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:elevation="10dp"
        android:padding="10dp"


        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reviewsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:elevation="10dp"
        android:padding="10dp"
        android:visibility="gone"

        />

</LinearLayout>