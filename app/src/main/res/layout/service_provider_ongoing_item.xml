<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp"
        android:elevation="10dp"
      android:layout_margin="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ongoingName"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Vinz Lloyd Alferez"
            android:textColor="#777777"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ongoingLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mati City"
            android:textColor="#777777" />

        <TextView

            android:id="@+id/ongoingJobType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Installiation"
            android:textColor="#777777" />

        <TextView

            android:id="@+id/ongoingTotalPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1000"
            android:textColor="#777777" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/ongoingCancelledButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"

                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="10dp"
                android:text="Cancelled" />

            <Button
                android:id="@+id/ongoingCompletedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="50dp"

                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@+id/ongoingCancelledButton"
                android:textSize="10dp"
                android:text="Completed" />

            />
        </RelativeLayout>



    </LinearLayout>


</LinearLayout>