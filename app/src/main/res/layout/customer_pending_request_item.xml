<?xml version="1.0" encoding="utf-8"?>



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:elevation="5dp"
    android:layout_marginBottom="1dp"
    android:padding="20dp"
    android:layout_height="wrap_content">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/cpSPname"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="Name" />
    <TextView
        android:id="@+id/cpSPservice"
        android:layout_below="@+id/cpSPname"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="Plumber" />
    <TextView
        android:id="@+id/cpSPjobtype"
        android:layout_below="@+id/cpSPservice"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="Jobtype" />

    <TextView
        android:id="@+id/cpSPtimestamp"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"

        android:text="timestamp" />
    <TextView
        android:id="@+id/cpSPtotal"
        android:layout_below="@+id/cpSPtimestamp"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"

        android:text="total" />
    <TextView
        android:id="@+id/cpSPstatus"
        android:layout_below="@+id/cpSPtotal"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:text="status" />


</RelativeLayout>

    <Button
        android:id="@+id/cancelRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel request"

        />

</LinearLayout>